{
  "name": "solar-system",
  "scripts": {
    "start": "rimraf dist && gulp",
    "build:dev": "GOOS=js GOARCH=wasm go build -o example/solar-system.wasm",
    "build": "GOOS=js GOARCH=wasm go build -o dist/solar-system.wasm"
  },
  "dependencies": {
    "jquery": "^3.4.1",
    "three": "^0.113.2"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.3",
    "chalk": "^3.0.0",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.1.0",
    "eslint": "^7.0.0-alpha.1",
    "gulp": "^4.0.2",
    "gulp-memory-fs": "^0.4.0",
    "gulp-plumber": "^1.2.1",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.7",
    "rimraf": "^3.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx}": "eslint"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
